{
  "private": false,
  "name": "@softwareventures/sh",
  "version": "0.0.0",
  "description": "POSIX-compatible shell",
  "keywords": [
    "Bourne",
    "POSIX",
    "sh",
    "shell"
  ],
  "author": "Daniel Cassidy <mail@danielcassidy.me.uk>",
  "homepage": "https://github.com/softwareventures/sh",
  "bugs": "https://github.com/softwareventures/sh/issues",
  "repository": "github:softwareventures/sh",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "pre-commit": "precise-commits",
    "fix": "tsc --noEmit && eslint . --fix && prettier --write .",
    "lint": "tsc --noEmit && eslint . && prettier --check .",
    "prepare": "husky install && tsc",
    "test": "ava"
  },
  "main": "index.js",
  "engines": {
    "node": "^14 || ^16 || >=18"
  },
  "dependencies": {
    "dictionary-types": "2.0.1"
  },
  "devDependencies": {
    "@softwareventures/eslint-config": "7.1.0",
    "@softwareventures/precise-commits": "3.0.4",
    "@softwareventures/prettier-config": "4.0.0",
    "@softwareventures/semantic-release-config": "2.0.3",
    "@softwareventures/tsconfig": "7.0.0",
    "@typescript-eslint/eslint-plugin": "5.43.0",
    "@typescript-eslint/parser": "5.43.0",
    "ava": "4.3.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.28.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsdoc": "39.6.2",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-sonarjs": "0.16.0",
    "husky": "8.0.2",
    "prettier": "2.7.1",
    "ts-node": "10.9.1",
    "typescript": "4.9.3"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@softwareventures"
  },
  "prettier": "@softwareventures/prettier-config",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  },
  "release": {
    "extends": "@softwareventures/semantic-release-config"
  }
}
