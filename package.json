{
  "private": false,
  "name": "@softwareventures/sh",
  "version": "0.0.0",
  "description": "POSIX-compatible shell",
  "keywords": [
    "Bourne",
    "POSIX",
    "sh",
    "shell"
  ],
  "author": "Daniel Cassidy <mail@danielcassidy.me.uk>",
  "homepage": "https://github.com/softwareventures/sh",
  "bugs": "https://github.com/softwareventures/sh/issues",
  "repository": "github:softwareventures/sh",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "pre-commit": "precise-commits",
    "fix": "tsc --noEmit && eslint . --fix && prettier --write .",
    "lint": "tsc --noEmit && eslint . && prettier --check .",
    "prepare": "husky install && tsc",
    "test": "ava"
  },
  "main": "index.js",
  "engines": {
    "node": "^14 || >=16"
  },
  "dependencies": {
    "dictionary-types": "2.0.1"
  },
  "devDependencies": {
    "@softwareventures/eslint-config": "5.1.5",
    "@softwareventures/precise-commits": "2.0.21",
    "@softwareventures/prettier-config": "3.0.0",
    "@softwareventures/semantic-release-config": "2.0.2",
    "@softwareventures/tsconfig": "6.0.0",
    "ava": "4.2.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.17.0",
    "husky": "8.0.1",
    "prettier": "2.7.1",
    "ts-node": "10.8.1",
    "typescript": "4.7.4"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@softwareventures"
  },
  "prettier": "@softwareventures/prettier-config",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  },
  "release": {
    "extends": "@softwareventures/semantic-release-config"
  }
}
